<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title>Your Play</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.4.2/angular-ui-router.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular-resource.min.js"></script>
  </head>
  <body ng-controller="NavController as navCtrl">
    <div class="overlay"></div>
    <ul id="logged-out-dropdown" class="dropdown-content">
      <li><a ui-sref="login">Log In</a></li>
      <li><a ui-sref="signup">Sign Up</a></li>
    </ul>

    <ul id="logged-in-dropdown" class="dropdown-content">
      <li><strong><p class="center-align">{{navCtrl.getUser().name}}</p></strong></li>
      <li class="divider"></li>
      <li><a ng-click="navCtrl.logout()">Log Out</a></li>
    </ul>

    <div class="green darken-4">
      <nav>
        <div class="nav-wrapper">
          <ul class="left">
            <li>&nbsp;&nbsp;<a ui-sref="home" class="left brand-logo">Your Play</a></li>
          </ul>
          <ul class="right">
            <li ng-show="navCtrl.isLoggedIn()" ui-sref-active="active"><a ui-sref="new-play"><span class="glyphicon glyphicon-edit"><i class="material-icons">add_box</i></span></a></li>
            <li ng-show="navCtrl.isLoggedIn()" ui-sref-active="active"><a ui-sref="my-games"><span><i class="material-icons">security</i></span></a></li>
            <li ng-hide="navCtrl.isLoggedIn()"><a class="dropdown-button" href="#!" data-activates="logged-out-dropdown"><i class="material-icons right">perm_identity</i></a></li>
            <li ng-show="navCtrl.isLoggedIn()"><a class="dropdown-button" href="#!" data-activates="logged-in-dropdown"><i class="material-icons right">perm_identity</i></a></li>
          </ul>
        </div>
      </nav>
    </div>
    <br><br><br><br>
    <div ui-view class="container"></div>

    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/services/auth-interceptor.js"></script>
    <script src="/javascripts/services/token-service.js"></script>
    <script src="/javascripts/services/user-service.js"></script>
    <script src="/javascripts/services/game-service.js"></script>
    <script src="/javascripts/services/search-service.js"></script>
    <script src="/javascripts/controllers/nav-controller.js"></script>
    <script src="/javascripts/controllers/user-controller.js"></script>
    <script src="/javascripts/controllers/my-games-controller.js"></script>
    <script src="/javascripts/controllers/new-play-controller.js"></script>
    <script src="/javascripts/controllers/new-game-controller.js"></script>
    <script src="/javascripts/controllers/game-detail-controller.js"></script>
    <script src="/javascripts/controllers/play-controller.js"></script>
    <script src="/javascripts/controllers/play-edit-controller.js"></script>
  </body>
</html>
